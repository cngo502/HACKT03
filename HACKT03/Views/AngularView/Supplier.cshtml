<style>
    .numberStyle { width: 60px; }
</style>
<div ng-controller="SupplierCtrl" style="padding:10px; height:100%" ng-cloak>
    <div class="form-inline" style="padding-top: 10px">
        <label>We are (a group or organization name)</label>
		<br />
        <input class="form-control" style="width:100%" type="text" id="organizationID" ng-model="search.organization" placeholder="Name of person or organization" />
    </div>	
	<div class="form-inline" style="padding-top: 10px">
		<label>I am located at</label>
		<br />    
		<input class="form-control" onmousedown="myFunction()"  style="width:100%" type="text" id="searchLocationID" ng-model="search.location" placeholder="Enter Location, Address, or Postal Code"/>	
		<input type="search" value="currentLocation" ng-show=""/>	
