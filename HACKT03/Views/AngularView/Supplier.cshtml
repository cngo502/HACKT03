<style>
    .numberStyle { width: 60px; }
</style>
<div ng-controller="SupplierCtrl" style="padding:10px; height:100%" ng-cloak>
    <div class="form-inline" style="padding-top: 10px">
        <label>We are (a group or organization name)</label><br />
        <input class="form-control col-sm-8" style="width:100%" type="text" id="searchLocationID" ng-model="searchLocationValue" placeholder="Name of person or organization" />
    </div>
	
	@*<br />
	<br />
	<div class="row">
		<span style="padding-left:15px"><strong>List of places you can drop it of</strong></span>
		<table class="table" show-filter="true" style="width: inherit; margin-bottom: 20px; margin-left: 10px; margin-right: 10px;">
			<tr ng-repeat="x in suppliers track by $index">
				<td title="Name">{{ x.Name }}</td>
				<td title="Address">{{ x.Address }}</td>
			</tr>
		</table>
	</div>*@
	<div class="form-inline" style="padding-top: 10px">
		<label>I am located at</label><br />    
		<input class="form-control col-sm-8"  style="width:100%" type="text" id="searchLocationID" ng-model="searchLocationValue" placeholder="Enter Location, Address, or Postal Code"/>		
	</div>
	<div class="form-inline" style="padding-top:10px;">
		<button ng-click="currentLocation()">Testing Place</button>
	</div>
    <div class="form-inline"  style="padding-top: 10px">
        <label>I have the following(s) to donate</label>
        <br />
		<table style="width:-webkit-fill-available; border: 1px solid black">
			<tr>
				<th style="width: 20%">
					&nbsp;
				</th>
				<th style="width: 40%">Goods</th>
				<th style="width: 40%">No. of Item(s)</th>
			</tr>
			<tr>
				<td><input type="checkbox" name="chkFood" /></td>
				<td>Food (lbs)</td>
				<td><input type="number" class="numberStyle" value="1" /></td>
			</tr>
			<tr>
				<td><input type="checkbox" name="chkWater" /></td>
				<td>Water (casses)</td>
				<td><input type="number" class="numberStyle" /></td>
			</tr>
			<tr>
				<td><input type="checkbox" name="chkBlankets" /></td>
				<td>Blankets (ea.)</td>
				<td><input type="number" class="numberStyle" /></td>
			</tr>
		</table>
    </div>
	<div class="form-inline"  style="padding-top: 10px">
		<button id="searchID" ng-click="searchLocation(searchLocationValue)">Search</button>
	</div>
</div>
