<div ng-controller="UserCtrl" style="padding:10px; height:100%" ng-cloak>
    <div class="form-inline" style="padding-top:10px">
        <label>We are (a group or organization name)</label><br />
        <input class="form-control" style="width:100%" type="text" id="searchLocationID" ng-model="searchLocationValue" placeholder="Name of person or organization" />
    </div>
	<br />


    <div class="form-inline" style="padding-top:10px">
        <label>I am located at</label><br />
        <input class="form-control" style="width:100%" type="text" id="searchLocationID" ng-model="searchLocationValue" placeholder="Enter Location, Address, or Postal Code" />
    </div>
	<br />

    <div class="form-inline" style="padding-top:10px">
        <label>I need the following item(s)</label>
        <br />
		<table style="width:-webkit-fill-available; border: 1px solid black">
			<tr>
				<th style="width: 20%">
					&nbsp;
				</th>
				<th style="width: 40%">Goods</th>
				<th style="width: 40%">No. of Item(s)</th>
			</tr>
			<tr>
				<td><input type="checkbox" name="chkFood" /></td>
				<td>Food (lbs)</td>
				<td><input type="number" class="numberStyle" value="1" /></td>
			</tr>
			<tr>
				<td><input type="checkbox" name="chkWater" /></td>
				<td>Water (casses)</td>
				<td><input type="number" class="numberStyle" /></td>
			</tr>
			<tr>
				<td><input type="checkbox" name="chkBlankets" /></td>
				<td>Blankets (ea.)</td>
				<td><input type="number" class="numberStyle" /></td>
			</tr>
		</table>
    </div>
	<br />

    <div class="form-inline" style="padding-top:10px">
        <input type="checkbox" /> I can pick up from multiple locations. 
    </div>
	<br />

	<div class="form-inline" style="padding-top:10px">
		<button id="searchID" ng-click="searchLocation(searchLocationValue)">Search</button>
		<button>Cancel</button>
	</div>  
</div>

